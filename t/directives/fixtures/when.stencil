<html>
<body>
[ when (this.article) ] {
  <div class="article">
    <h1>[<< article.title ]</h1>
    <p class="sub-title">By [<< article.author ] on [<< article.publishedAt ]</p>
    <div>
      [< article.body ]
    </div>
  </div>
}
<div class="sidebar">
  <h2>Recent Comments</h2>
  <ul>
    [ each (recents) |comment| ] {
      <li>[<< comment.snippet ] ~ [<< comment.author ] on [<< comment.articleTitle ]</li>
    }
  </ul>
</div>
</body>
</html>
